pipeline {
    agent any

    enviroment {
        NONE_VERSIONS = '18.x'
    }

    tools {
        nodejs ${NONE_VERSIONS}
    }

    stages {
        stage ('Checkout') {
            steps{
                git branch: 'main', url: 'https://github.com/thrtt/StudentRegistryAppDemo'             }
        }

        stage ('Install dependencies') {
            steps {
                script {
                    
                        bat 'npm install'
                    }
                }
            }
        }

        stage ('Start aplication and run tests'){
            steps {
                script {
                    bat 'npm start &'
                    bat 'wait-on http://localhost:8090'
                    bat 'npm test'
                }
            }
        }
    }

    post {
        aways {
            echo 'CI pipeline completed'
        }
    }
}